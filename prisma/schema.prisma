generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    username String @id

    createdAt DateTime @default(now())

    directories Directory[]
    files       File[]
}

model Directory {
    id String @id @default(cuid())

    name String

    files          File[]
    subDirectories Directory[] @relation("SubDirectory")

    parentDirectory   Directory? @relation("SubDirectory", fields: [parentDirectoryId], references: [id], onDelete: Cascade)
    parentDirectoryId String?

    createdAt DateTime @default(now())

    owner         User   @relation(fields: [ownerUsername], references: [username], onDelete: Cascade)
    ownerUsername String
}

model File {
    id String @id

    name String
    size BigInt

    chunks Chunk[]

    parentDirectory   Directory? @relation(fields: [parentDirectoryId], references: [id], onDelete: Cascade)
    parentDirectoryId String?

    owner         User?   @relation(fields: [ownerUsername], references: [username], onDelete: Cascade)
    ownerUsername String?

    createdAt DateTime @default(now())
}

model Chunk {
    id String @id

    index Int
    size  BigInt

    file   File   @relation(fields: [fileId], references: [id], onDelete: Cascade)
    fileId String

    createdAt DateTime @default(now())
}
